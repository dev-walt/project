@model IEnumerable<ProjectTracker.Models.DB.projectMaster>
@using GridMvc.Html
@{
    ViewBag.Title = "SearchProject";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@using GridMvc.Html

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
@*<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>*@
@*<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>*@
<script src="~/Scripts/gridmvc.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>

<div class="code-cut">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.projectName).Titled("Project Name").Filterable(true);
    columns.Add(c => c.CRNumber).Titled("CRNumber").Filterable(true);
    columns.Add(c => c.projectDescription).Titled("Description").Filterable(true);
    columns.Add(c => c.remarks).Titled("Remarks").Filterable(true);
    columns.Add(c => c.status).Titled("Status").Filterable(true);
    columns.Add(c => c.isActive).Titled("Active").Filterable(true);
    columns.Add(c => c.FPR).Titled("FPR").Filterable(true);
    columns.Add(c => c.team).Titled("Team").Filterable(true);
    columns.Add(c => c.expectedDelDate).Titled("Expected Delivery Date").Filterable(true);

    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.projectId }));

}).WithPaging(4).Sortable(true)
</div>

