@model ProjectTracker.Models.ViewModel.UserLoginView
@{ ViewBag.Title = "LogIn";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

    <script>
        function showPassword() {
            var x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        };
    </script>

<div class="login-panel">
    @if (ViewBag.errormessage != null)
    {
<p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>}

    <div class="form-horizontal" style="background-color:orange ;border-radius:20px; margin-left:370px; margin-top:50px; margin-right:370px; padding:50px">
        <div class="form-group">
            <div class="col-md-12 col-xs-12">
                <h3 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin-left:10px" > SignIn</h3>
            </div>
        </div>




        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="form-group" style="align-content:center; margin:10px">

                <div class="col-md-12 col-xs-12">
                    @Html.LabelFor(model => model.emailId)
                    @Html.TextBoxFor(model => model.emailId, new { @class = "form-control", @maxlength = 30 })
                    @Html.ValidationMessageFor(model => model.emailId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="form-group" style="align-content:center; margin:10px">

                <div class="col-md-12 col-xs-12">
                    @Html.LabelFor(model => model.password)
                    @Html.PasswordFor(model => model.password, new { @class = "form-control", @maxlength = 30 })
                    <input type="checkbox" id="showPass" onclick="showPassword()"/>Show Password
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @* <div class="form-group">

                <div class="col-md-12 col-xs-12">
                    <div id="captcha" class="captcha">
                        @Html.Label("Captcha")
                        @Html.Captcha("Refresh", "Enter the text you see above", 5, "<span class='text-danger'>Enter Captcha</span>", true)
                    </div>
                </div>
            </div>*@

        <div class="form-group">
            <div class="form-group" style="align-content:center; margin:10px">

                <div class="col-md-offset-0 col-md-10">
                    <input id="Submit1" class="btn btn-success" type="submit" value="LogIn!" style="margin-left:80px; margin-top:10px;padding-left:20px; padding-right:20px">
                </div>

            </div>
        </div>
    </div>
    <br />
    <br />

</div>
}

