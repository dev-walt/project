</script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/UserTimeSheet/AutoPopulate",
            data: "{}",
            success: function (data) {
                var s = '<option value="-1">Please Select a Project</option>';
               
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].CRNumber + '">' + data[i].projectName + '</option>';

                }
                
                $("#Dropdown").html(s);

            }
        });
    });

    function getValue() {
        var myVal = $("#Dropdown").val();
        $("#showCR").val(myVal);
@*        $("#showDescription").val(myVal);*@
    }

</script>

